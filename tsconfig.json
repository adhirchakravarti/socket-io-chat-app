{
    "compilerOptions": {
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "esnext",
        "target": "es6",
        "lib": ["esnext", "dom", "dom.iterable"],
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "baseUrl": "./",
        "outDir": "./public",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "downlevelIteration": true
        // "paths": {
        //     "components/*": ["src/components/*"]
        // }
    },
    "include": ["./src/**/*", "./webpack.config.ts", "server/**/*", "./jest.config.js"]
}
